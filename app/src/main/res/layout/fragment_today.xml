<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_app_bg"
    tools:context=".presentation.TodayFragment">

    <TextView
        android:id="@+id/txtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtCity"
        app:layout_constraintStart_toStartOf="@id/txtCity"/>

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/txtDate"
        app:layout_constraintTop_toBottomOf="@id/txtDate"/>

    <TextView
        android:id="@+id/txtTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:textSize="50sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="@id/txtDesc"
        app:layout_constraintBottom_toTopOf="@id/layInfo"/>

    <TextView
        android:id="@+id/txtDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2103"
        android:textSize="24sp"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toTopOf="@id/txtTemp"
        app:layout_constraintStart_toEndOf="@id/txtTemp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/ic_today_24"
        app:layout_constraintTop_toTopOf="@id/txtCity"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgFeelsLike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_date_range_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtFeelsLikeT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="14dp"
            android:text="Feels like"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/imgFeelsLike"
            app:layout_constraintStart_toEndOf="@id/imgFeelsLike"/>
        <TextView
            android:id="@+id/txtFeelsLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toBottomOf="@id/txtFeelsLikeT"
            app:layout_constraintStart_toStartOf="@id/txtFeelsLikeT"/>


        <TextView
            android:id="@+id/txtCelcius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="\u2103"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toTopOf="@id/txtFeelsLike"
            app:layout_constraintStart_toEndOf="@id/txtFeelsLike"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="@id/txtCelcius"
            app:layout_constraintStart_toEndOf="@id/txtCelcius"/>
        <ImageView
            android:id="@+id/imgWind"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_date_range_24"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/imgFeelsLike"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txtWindT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="14dp"
            android:text="Wind"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/imgWind"
            app:layout_constraintStart_toEndOf="@id/imgWind"/>
        <TextView
            android:id="@+id/txtWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toBottomOf="@id/txtWindT"
            app:layout_constraintStart_toStartOf="@id/txtWindT"/>

        <ImageView
            android:id="@+id/imgHumidity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_date_range_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtHumidityT"/>
        <TextView
            android:id="@+id/txtHumidityT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Humidity"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/imgHumidity"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/txtHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toBottomOf="@id/txtHumidityT"
            app:layout_constraintStart_toStartOf="@id/txtHumidityT"/>

        <ImageView
            android:id="@+id/imgUV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_date_range_24"
            app:layout_constraintTop_toBottomOf="@id/txtHumidity"
            app:layout_constraintEnd_toStartOf="@id/txtUVT"/>
        <TextView
            android:id="@+id/txtUVT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="UV Index"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/imgUV"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/txtUV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toBottomOf="@id/txtUVT"
            app:layout_constraintStart_toStartOf="@id/txtUVT"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>